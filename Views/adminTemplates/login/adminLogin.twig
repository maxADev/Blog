{% extends "adminLayout.twig" %}
{% block head %}
    <title>Connexion Admin</title>
{% endblock %}

{% block content %}

{% if flashMessageList is defined %}
    <div class="container text-center text-danger mt-3">
        {% for flashMessage in flashMessageList %}
            {% if flashMessage.type == "danger" %}
                <div class="container text-center text-danger mt-3">
                    <p>Erreur :<p>
                    <p>{{flashMessage.message}}<p>
                </div>
            {% else %}
                <div class="container text-center text-success mt-3">
                    <p>{{flashMessage.message}}<p>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}

<div class="container text-center">
    <p>Connexion Admin</p>
    <form action="" method="post">
        <div class="form-group">
            <label for="login">Email ou Identifiant</label>
            <input type="text" class="form-control" id="login" name="login" placeholder="Votre email ou identifiant">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Votre mot de passe">
        </div>
        <button type="submit" class="btn btn-primary">Valider</button>
    </form>
</div>
{% endblock %}