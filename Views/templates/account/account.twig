{% extends "layout.twig" %}
{% block head %}
    <title>Mon Compte</title>
{% endblock %}

{% block content %}
    <div class="container text-center">
        <p>Mon compte {{ varList.user.first_name }}</p>
        <form action="" method="post">
            <button type="submit" name="comment" class="btn btn-primary">Voir mes commentaires</button>
        </from>
        {% if varList.commentList is defined %}
            <div class="container text-center mt-3">
            {% for comment in varList.commentList %}
                <div class="container col-5 mt-3 border border-dark rounded text-start">
                    <div class="container">
                        <p>Ecrit par vous -
                        {% if comment.modification_date is not null %}
                            {{comment.modification_date|date("d/m/Y", "Europe/Paris")}}</p>
                        {% else %}
                            {{comment.creation_date|date("d/m/Y", "Europe/Paris")}}</p>     
                        {% endif %}
                    </div>
                    <div class="container">
                        <p>{{comment.content}}</p>
                        <p>{{comment.comment_statut_name}}</p>
                    </div>
                    <div class="col-6 row">
                        <div class="col-6">
                            <a class="btn btn-primary" href={{"/post/#{comment.FK_post_id}/#{comment.title}"|replace({' ': '-'})}}>Voir Le Post concern√©</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
