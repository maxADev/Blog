{% extends "layout.twig" %}
{% block head %}
    <title>Contact</title>
{% endblock %}

{% block content %}
    <div class="container-fluid bg-light p-3 border m-0 mb-5 row">
        <div class="container col-12">
            <h3>Contact</h3>
            <p>Demande de prise de contact</p>
        </div>
    </div>
    <div class="container text-center col-12 col-sm-12 col-lg-8 col-xl-8 bg-light rounded p-3">
        <form action="" method="post">
            <div class="form-group">
                <label for="lastName">Votre nom</label>
                <input type="lastName" class="form-control" id="lastName" name="lastName" placeholder="Votre nom">
            </div>
            <div class="form-group mt-3">
                <label for="firstName">Votre prénom</label>
                <input type="firstName" class="form-control" id="firstName" name="firstName" placeholder="Votre prénom">
            </div>
            <div class="form-group mt-3">
                <label for="email">Votre Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Votre email">
            </div>
            <div class="form-group mt-3">
                <label for="object">Objet</label>
                <input type="object" class="form-control" id="object" name="object" placeholder="Objet">
            </div>
             <div class="form-group mt-3">
                <label for="message">Message</label>
                <input type="message" class="form-control" id="message" name="message" placeholder="Message">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Valider</button>
        </form>
    </div>
{% endblock %}