{% extends "layout.twig" %}
{% block head %}
    <title>Connexion</title>
{% endblock %}

{% block content %}
<div class="container text-center">
    <div class="text-success text-center mt-3">
        <p>{{varList.inscription_message}}</p>
    </div>
    <p>Connexion</p>
    <form action="" method="post">
        <div class="form-group">
            <label for="emailOuIdentifiant">Email ou Identifiant</label>
            <input type="text" class="form-control" id="emailOuIdentifiant" name="emailOuIdentifiant" placeholder="Votre email ou identifiant">
        </div>
        <div class="form-group">
            <label for="mot_de_passe">Mot de passe</label>
            <input type="mot_de_passe" class="form-control" id="mot_de_passe" name="mot_de_passe" placeholder="Votre mot de passe">
        </div>
        <button type="submit" class="btn btn-primary">Valider</button>
    </form>
</div>
{% endblock %}